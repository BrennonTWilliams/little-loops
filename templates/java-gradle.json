{
  "$schema": "../config-schema.json",
  "_meta": {
    "name": "Java (Gradle)",
    "description": "Java project with Gradle build system",
    "detect": ["build.gradle", "build.gradle.kts"],
    "tags": ["java", "gradle", "jvm"]
  },
  "project": {
    "src_dir": "src/main/java/",
    "test_cmd": "./gradlew test",
    "lint_cmd": "./gradlew checkstyleMain",
    "type_cmd": null,
    "format_cmd": null,
    "build_cmd": "./gradlew build -x test"
  },
  "scan": {
    "focus_dirs": ["src/main/java/", "src/test/java/"],
    "exclude_patterns": [
      "**/build/**",
      "**/.gradle/**",
      "**/.idea/**",
      "**/*.class"
    ]
  },
  "issues": {
    "base_dir": ".issues",
    "categories": {
      "bugs": {"prefix": "BUG", "dir": "bugs", "action": "fix"},
      "features": {"prefix": "FEAT", "dir": "features", "action": "implement"},
      "enhancements": {"prefix": "ENH", "dir": "enhancements", "action": "improve"}
    }
  }
}
