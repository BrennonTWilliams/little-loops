{
  "$schema": "../config-schema.json",
  "_meta": {
    "name": "Python (Generic)",
    "description": "Standard Python project with pytest, ruff, and mypy",
    "detect": ["pyproject.toml", "setup.py", "requirements.txt"],
    "tags": ["python", "pytest", "ruff", "mypy"]
  },
  "project": {
    "src_dir": "src/",
    "test_cmd": "pytest",
    "lint_cmd": "ruff check .",
    "type_cmd": "mypy",
    "format_cmd": "ruff format .",
    "build_cmd": null
  },
  "scan": {
    "focus_dirs": ["src/", "tests/"],
    "exclude_patterns": [
      "**/__pycache__/**",
      "**/.venv/**",
      "**/venv/**",
      "**/dist/**",
      "**/build/**",
      "**/*.egg-info/**"
    ]
  },
  "issues": {
    "base_dir": ".issues",
    "categories": {
      "bugs": {"prefix": "BUG", "dir": "bugs", "action": "fix"},
      "features": {"prefix": "FEAT", "dir": "features", "action": "implement"},
      "enhancements": {"prefix": "ENH", "dir": "enhancements", "action": "improve"}
    }
  }
}
