{
  "$schema": "https://raw.githubusercontent.com/BrennonTWilliams/little-loops/main/config-schema.json",
  "project": {
    "name": "little-loops",
    "src_dir": "scripts/",
    "test_cmd": "python -m pytest scripts/tests/",
    "lint_cmd": "ruff check scripts/",
    "type_cmd": "python -m mypy scripts/little_loops/",
    "format_cmd": "ruff format scripts/"
  },
  "issues": {
    "base_dir": ".issues"
  },
  "scan": {
    "focus_dirs": ["scripts/"],
    "exclude_patterns": ["**/__pycache__/**", "**/.git/**", "**/.venv/**", "**/dist/**", "**/build/**"]
  },
  "context_monitor": {
    "enabled": true
  },
  "scratch_pad": {
    "enabled": false
  },
  "documents": {
    "enabled": true,
    "categories": {
      "architecture": {
        "description": "System design and technical decisions",
        "files": ["docs/ARCHITECTURE.md", "docs/API.md"]
      },
      "guidelines": {
        "description": "Development guidelines and conventions",
        "files": [".claude/CLAUDE.md", "CONTRIBUTING.md"]
      }
    }
  },
  "sprints": {
    "sprints_dir": ".sprints",
    "default_timeout": 3600,
    "default_max_workers": 4
  },
  "sync": {
    "enabled": true,
    "github": {
      "label_mapping": {
        "BUG": "bug",
        "FEAT": "enhancement",
        "ENH": "enhancement"
      },
      "priority_labels": true,
      "sync_completed": false
    }
  }
}
